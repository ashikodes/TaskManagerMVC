@model TaskManagerMVC.Models.TaskItem

<h2>Task Details</h2>
<dl class="row mt-4">
    <dt class = "col-sm-3 mb-3">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class = "col-sm-9">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class = "col-sm-3 mb-3">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class = "col-sm-9">
        @(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)
    </dd>
    <dt class = "col-sm-3 mb-3">
        @Html.DisplayNameFor(model => model.IsCompleted)
    </dt>
    <dd class = "col-sm-9">
        @Html.DisplayFor(model => model.IsCompleted)
    </dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
<a asp-action="Index" class="btn btn-secondary ms-3">Back to List</a>
